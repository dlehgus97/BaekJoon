@파이썬
a = []
for i in range (1,10):
    b = int(input())
    a.append(b)
print(max(a))
print(a.index(max(a))+1)    #0부터 이기 떄문에 

//c++
#include <iostream>

using namespace std;

int main() {
	int a [9];
	int max = 0;
	int b = 0;
		for(int i = 0; i < 9; i++) {
			cin >> a[i];
			if (max < a[i]) {
				max = a[i];
				b = i+1;
			}
	}
		cout << max << "\n" << b;
}
