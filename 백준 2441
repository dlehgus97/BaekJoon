#파이썬
a=int(input())
for i in reversed(range(a+1)):
    print(" "*(a-i) + i*"*")

//c++
#include<iostream>

using namespace std;

int main() {
	int a;
	cin >> a;
	for (int i = 0; i <= a; i++) {
		for (int k = 0; k < i; k++)
			printf(" ");
		for (int k = 0; k < a-i; k++)
			printf("*");
		printf("\n");
	}

}
