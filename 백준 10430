#파이썬
a, b, c = map(int, input().split())  #한줄에 나오게 하기 위해서는 split(),map()을 사용
print((a+b)%c)
print(((a%c) + (b%c))%c)
print((a*b)%c)
print(((a%c) * (b%c))%c)


//c++
#include<iostream>
using namespace std;

int main() {
	int a; int b; int c;
	cin >> a >> b >> c;
	cout << ((a + b) % c) << "\n" << (((a % c) + (b % c)) % c) << "\n" << ((a * b) % c) << "\n" << (((a % c) * (b % c)) % c) << endl;

}
