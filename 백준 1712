#파이썬
a,b,c = map(int,input().split())
result = 1
if b>=c:
    result =-1
else :
    result = a//(c-b)+1
print(result)

//c++
#include <iostream>
using namespace std;
int main()
{
	int a, b, c;
	int result = 1;
	cin >> a >> b >> c;
	if (b >= c)
		result = -1;
	else
		result = a / (c - b) + 1;
	cout << result;
}

//고정비용 a 에서 가격(c)-가변비용(b)를 나눠주면 손익분기점이 나오고 +1을 해주면 이익이 나오게 된다.
//b>=c 일때는 아무리 많이 팔아도 가변비용이 가격보다 높기 때문에 손익분기점이 안나오므로 조건문을 설정해준다 .
